#define _CRT_SECURE_NO_WARNINGS

#include <stdio.h>
#include <math.h>

int DP[10001];

int main()
{
    int n = 0;

    scanf("%d", &n);

    DP[0] = 0;
    DP[1] = 1;

    if (n > 0)
    {
        for (int i = 2; i <= n; i++)
        {
            DP[i] = (DP[i - 1] + DP[i - 2]) % 1000000000;
        }
    }
    else if (n == 0)
    {
        printf("0\n");
    }
    else
    {
        for (int i = -1; i >= n; i--)
        {
            DP[abs(i)] = abs(DP[i + 1] - DP[i + 2]) % 1000000000;
        }
    }
    
    if (DP[n] > 0)
    {
        printf("1\n");
        printf("%d", DP[n]);
    }
    else if (n == 0)
    {
        printf("0");
    }
    else
    {
        printf("-1\n");
        printf("%d", DP[abs(n)]);
    }
   
    return 0;
}

// 피보나치 수
// DP[i] = DP[i - 1] + DP[i - 2]
// 
// DP[-1] = DP[0] - DP[1]
// DP[abs(i)] = DP[i+1] - DP[i+2]
